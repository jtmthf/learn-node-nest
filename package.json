{
  "name": "learn-node-nest",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">= 10.0.0"
  },
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig.build.json",
    "build:assets": "webpack --mode production",
    "build:assets:dev": "webpack --mode development --watch",
    "format": "prettier --write \"src/**/*.ts\"",
    "env": "sync-dotenv --env .env.development",
    "start": "ts-node src/main.ts",
    "start:dev": "tsc-watch -p tsconfig.build.json --onSuccess \"node dist/main.js\"",
    "start:debug": "tsc-watch -p tsconfig.build.json --onSuccess \"node --inspect-brk dist/main.js\"",
    "start:prod": "node dist/main.js",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^6.0.0",
    "@nestjs/core": "^6.0.0",
    "@nestjs/platform-express": "^6.0.0",
    "@nestjs/typeorm": "^6.1.3",
    "connect-flash": "^0.1.1",
    "connect-redis": "^3.4.2",
    "date-fns": "^1.30.1",
    "dotenv": "^8.0.0",
    "env-var": "^5.0.0",
    "express-session": "^1.16.2",
    "lodash": "^4.17.15",
    "nestjs-flub": "^0.1.0",
    "passport": "^0.4.0",
    "pg": "^7.12.0",
    "pug": "^2.0.4",
    "reflect-metadata": "^0.1.12",
    "request-context": "^2.0.0",
    "rxjs": "^6.3.3",
    "slugify": "^1.3.4",
    "typeorm": "^0.2.18",
    "typeorm-transactional-cls-hooked": "^0.1.8"
  },
  "devDependencies": {
    "@nestjs/testing": "6.5.3",
    "@types/cls-hooked": "^4.3.0",
    "@types/connect-flash": "^0.0.34",
    "@types/connect-redis": "^0.0.10",
    "@types/dotenv": "^6.1.1",
    "@types/express": "4.17.0",
    "@types/jest": "24.0.16",
    "@types/lodash": "^4.14.136",
    "@types/node": "^10.0.0",
    "@types/passport": "^1.0.0",
    "@types/supertest": "2.0.8",
    "@types/webpack-env": "^1.14.0",
    "autoprefixer": "^9.6.1",
    "css-loader": "^3.1.0",
    "fast-sass-loader": "^1.5.0",
    "husky": "^3.0.2",
    "jest": "24.8.0",
    "mini-css-extract-plugin": "^0.8.0",
    "node-sass": "^4.13.1",
    "postcss-loader": "^3.0.0",
    "prettier": "1.18.2",
    "pretty-quick": "^1.11.1",
    "rimraf": "^2.6.2",
    "supertest": "4.0.2",
    "sync-dotenv": "^2.2.0",
    "ts-jest": "24.0.2",
    "ts-loader": "^6.0.4",
    "ts-node": "8.3.0",
    "tsc-watch": "2.2.1",
    "tslint": "5.18.0",
    "typescript": "3.5.3",
    "webpack": "^4.38.0",
    "webpack-cli": "^3.3.6",
    "webpack-merge": "^4.2.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged && npm run env"
    }
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
